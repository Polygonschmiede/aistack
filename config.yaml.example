# aistack configuration example
# System-wide: /etc/aistack/config.yaml
# User-specific: ~/.aistack/config.yaml

# Container runtime selection
container_runtime: docker  # docker or podman

# Installation profile
# Options: minimal, standard-gpu (default), dev
profile: standard-gpu

# GPU exclusive locking
gpu_lock: true

# Logging configuration
logging:
  # Log level: debug, info, warn, error
  level: info

  # Log format: json, text
  format: json

# Model cache management
models:
  # Keep model caches when uninstalling services
  keep_cache_on_uninstall: true

# Update policy
updates:
  # Update mode: rolling (always latest) or pinned (use versions.lock)
  mode: rolling
